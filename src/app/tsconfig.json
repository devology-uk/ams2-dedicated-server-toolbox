// src/app/tsconfig.json

{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../../dist-app",
    "rootDir": "..",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "./**/*.ts",
    "../shared/**/*.ts",
    "../preload/**/*.cts"
  ],
  "exclude": [
    "../ui/**/*"
  ]
}