{
  "appId": "com.simracertools.ams2-dedicated-server-toolbox",
  "productName": "AMS2 Dedicated Server Toolbox",
  "files": [
    "dist-app/",
    "dist-ui/"
  ],
  "extraResources": [
    "dist-app/preload/**",
    "dist-app/data/**",
    "CHANGELOG.md"
  ],
  "asar": true,
  "asarUnpack": [
    "node_modules/better-sqlite3/**"
  ],
  "icon": "./appIcon.png",
  "publish": [
    {
      "provider": "github",
      "owner": "devology-uk",
      "repo": "ams2-dedicated-server-toolbox"
    }
  ],
  "mac": {
    "category": "public.app-category.utilities",
    "target": ["dmg"]
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Utility"
  },
  "win": {
    "target": ["nsis", "msi"]
  }
}